#extend("base")

#export("body") {

<div class="row">
    <div class="u-full-width">
        <h5>Welcome #(user.nickname) - points: #(user.score) - team: #(user.scteam_id.teamName)</h5>
        <a class="button" href="/sc/logout">Logout</a>
    </div>
</div>

#if(tour) {
<div class="row">
    <h4>Teams in the tournament</h4>
    <ul>
        #loop(teams, "team") {
        <li>#(team.teamName) #equal(team.id, winner.id) { - <b>WINNER!</b>}</li>
        }
    </ul>
    #if(tour.open) {
    <form action="/sc/tour/#(tour.id)/add/#(user.scteam_id.id)" method="post">
        <input class="button-primary" type="submit" value="Sign in Team"/>
    </form>
    <form action="/sc/tour/#(tour.id)/remove/#(user.scteam_id.id)" method="post">
        <input class="button-primary" type="submit" value="Sign out Team"/>
    </form>
    }
</div>
}
<div class="row">
    <h4>Games #if(tour) {in tournament #(tour.tourName)} !</h4>
    #if(winner) {<h4><b>#(winner.teamName) wins!</b></h4>}
</div>
<div class="row">
    <table class="u-full-width">
        <thead>
            <tr>
                <th>Team one</th>
                <th>Team two</th>
                <th>Date</th>
                <th>Scores Team 1</th>
                <th>Scores Team 2</th>
                <th>End game</th>
            </tr>
        </thead>
        <tbody>
            #loop(game, "game") {
            <tr>
                <td>#(game.team1.teamName)</td>
                <td>#(game.team2.teamName)</td>
                <td>#(game.date)</td>
                <td>
                    #if(game.ended) {
                    #(game.result1)
                    }
                </td>
                <td>
                    #if(game.ended) {
                    #(game.result2)
                    }
                </td>
                <td>
                    #if(game) {
                        #equal(game.ended, false) {
                            #equal(game.team1.id, user.scteam_id.id) {
                                <a class="button" href="/sc/games/end/#(game.id)">End game</a>
                                }
                                #equal(game.team2.id, user.scteam_id.id) {
                                <a class="button" href="/sc/games/end/#(game.id)">End game</a>
                                }
                            }
                    }
                </td>
            </tr>
            
            }
        </tbody>
    </table>
    
</div>

}
